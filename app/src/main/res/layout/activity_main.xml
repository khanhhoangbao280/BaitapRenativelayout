<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtView4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="4"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtView3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@id/txtView4"
        android:layout_toStartOf="@id/txtView4"
        android:background="#f00"
        android:gravity="center"
        android:text="3"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/txtView5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtView4"
        android:layout_toStartOf="@id/txtView4"
        android:background="#2196F3"
        android:gravity="center"
        android:text="5"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/txtView2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@id/txtView3"
        android:layout_toStartOf="@id/txtView5"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="2"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/txtView1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@id/txtView2"
        android:layout_toStartOf="@id/txtView2"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="1"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/txtView6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtView5"
        android:layout_toStartOf="@id/txtView5"
        android:background="#673AB7"
        android:gravity="center"
        android:text="6"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/txtView7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtView6"
        android:layout_toStartOf="@id/txtView6"
        android:background="#9C27B0"
        android:gravity="center"
        android:text="7"
        android:textSize="40sp" />

</RelativeLayout>